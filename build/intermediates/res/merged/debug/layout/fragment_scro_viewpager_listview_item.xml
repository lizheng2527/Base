<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="#ffffff"
    tools:ignore="HardcodedText,DisableBaselineAlignment" >
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fragment_scro_viewpager_listview_item_ranking"
                android:background="#f9d919"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="16sp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <TextView
            android:id="@+id/fragment_scro_viewpager_listview_item_name"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="姓名"
            android:textSize="16sp"
            android:textColor="#222222"/>
        <TextView
            android:id="@+id/fragment_scro_viewpager_listview_item_scro"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="积分"
            android:textSize="16sp"
            android:textColor="#222222"/>
        <TextView
            android:id="@+id/fragment_scro_viewpager_listview_item_upnumbers"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="上传量"
            android:textSize="16sp"
            android:textColor="#222222"/>
        <TextView
            android:id="@+id/fragment_scro_viewpager_listview_item_downnumbers"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="下载量"
            android:textSize="16sp"
            android:textColor="#222222"/>
    </LinearLayout>

</LinearLayout>