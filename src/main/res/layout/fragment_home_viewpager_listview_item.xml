<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="#ffffff"
    tools:ignore="HardcodedText,DisableBaselineAlignment" >
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.zdhx.androidbase.util.RoundCornerImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/test_head"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                android:textColor="#000000"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(班级显示)"
                android:textColor="#505050"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/btn_index_normal"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文字内容"
            android:textSize="16sp"
            android:padding="2dp"
            android:textColor="#000000"
            android:layout_marginLeft="52dp"
            />
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_index_normal"/>
        <GridView
            android:id="@+id/fragment_home_viewpager_listview_item_grid"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="5dp"
            android:numColumns="3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </GridView>

        <LinearLayout
            android:layout_marginLeft="55dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <com.zdhx.androidbase.util.RoundCornerImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/test_head"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:text="文件标题"/>
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#888888"
                    android:text="文件大小"/>

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/noticeSendTimeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="发送时间"
                android:layout_marginLeft="50dp"
                android:textColor="#888888" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginRight="5dp" >

                    <ImageButton
                        android:id="@+id/thumbsupBT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_thumbsup_selector" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:layout_marginLeft="10dp"
                        android:textColor="#555555"
                        android:padding="3dp"
                        android:textSize="18sp"
                        android:layout_alignRight="@id/thumbsupBT"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginRight="5dp" >

                    <ImageButton
                        android:id="@+id/thumbsupBT1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_thumbsup_selector" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:layout_marginLeft="10dp"
                        android:textColor="#555555"
                        android:padding="3dp"
                        android:textSize="18sp"
                        android:layout_alignRight="@id/thumbsupBT1"/>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/cuLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="right|center_vertical"
                android:id="@+id/LinearLayout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/thumbIV"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_thumbup" />

                <TextView
                    android:id="@+id/thumbsupTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张三、李四、王五"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/name_blue"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
            <EditText
                android:id="@+id/noticeContentTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:autoLink="all"
                android:hint="请输入评论内容"
                android:textColor="#555555"
                android:textSize="16sp" />
            <LinearLayout
                android:id="@+id/fragment_home_viewpager_listview_item_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>

</LinearLayout>